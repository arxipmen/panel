<h2 class="page-header">Добавить страну</h2>

<%= form_for @country, url: country_index_path do |f| %>
    <% if @country.errors.any? %>
        <div id="error_explanation">
          <h4>Страна не добавлена!</h4>
          <h4>Заполните все поля</h4>
        </div>
    <% end %>

    <p>
      <%= f.label :name, 'Страна' %><br>
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.label :full_name, 'Полное название' %><br>
      <%= f.text_field :full_name %>
    </p>
    <p>
      <%= f.submit value: 'Добавить страну' %>
    </p>
<% end %>
<%= link_to 'Назад', country_index_path %>