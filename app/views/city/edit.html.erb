<h2 class="page-header">Редактировать город</h2>

<%= simple_form_for @city, url: city_path do |f| %>

  <%= f.input :region_id, collection: @region_options, label: 'Страна / регион:' %>
  <%= f.input :region_id, collection: @region_code, label: 'Код региона:' %>
  <%= f.input :name, label: 'Город' %>
  <%= link_to 'Назад', city_index_path, class: 'btn btn-primary btn-sm' %>
  <%= f.button :submit, value: 'Сохранить город', class: 'btn btn-primary btn-sm' %>

<% end %>
