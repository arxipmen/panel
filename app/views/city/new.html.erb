<h2 class="page-header">Добавить город</h2>

<%= form_for @city, url: city_index_path do |f| %>

    <p>
      <%= f.label :code, 'Страна / регион:' %><br>
      <%= f.select :region_id, @region_options %>
    </p>
    <p>
      <%= f.label :name, 'Город:' %><br>
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.submit value: 'Добавить город' %>
    </p>

<% end %>
<%= link_to 'Назад', city_index_path %>