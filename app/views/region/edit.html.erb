<h2 class="page-header">Редактировать регион</h2>

<%= simple_form_for @region, url: region_path do |f| %>
    <%= f.input :name, label: 'Регион' %>
    <%= f.input :code, label: 'Код региона' %>
    <%= f.association :country, label: 'Страна' %>
    <%= link_to 'Назад', region_index_path, class: 'btn btn-primary btn-sm' %>
    <%= f.button :submit, value: 'Сохранить регион', class: 'btn btn-primary btn-sm' %>
<% end %>