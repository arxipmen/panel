<h3>Добавление турбазу</h3>

<%= form_for @tourist_base, url: tourist_base_index_path do |f| %>

    <p>
      <%= f.label :city_id, 'Город:' %><br>
      <%= f.select :city_id, @city_options %>
    </p>
    <p>
      <%= f.label :name, 'Название турбазы:' %><br>
      <%= f.text_field :name, size: 50 %>
    </p>
    <p>
      <%= f.label :description, 'Описание:' %><br>
      <%= f.text_area :description, size: '50x15' %>
    </p>
    <p>
      <%= f.label :phone, 'Телефон:' %><br>
      <%= f.text_field :phone %>
    </p>
    <p>
      <%= f.submit value: 'Добавить турбазу' %>
    </p>

<% end %>
<%= link_to 'Назад', tourist_base_index_path %>